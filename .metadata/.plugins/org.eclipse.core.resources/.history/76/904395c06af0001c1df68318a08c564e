package com.examen.ja;

public class Examen {

	public static void main(String[] args) {
		// Ejercicio 1:
		System.out.println("Buenos días");
		System.out.println("8x13");
		System.out.println(8*13);
		//Ejercicio 2:
		System.out.println("1 + 2 + 3 =" + (1+2+3));
		//Ejercicio 3:
		int a= 5;
		int b= 24;
		int c= 36;
		System.out.println("La suma de las tres variables a,b y c es:" + (a+b+c));
		c= 55;
		System.out.println("La suma con c=55 es:" + (a+b+c));
		//Ejercicio 4
			//3 Angulos de un triangulo cuya suma = 180. 
		//Definimos angulos= 
		int angulo1=70 ;
		int angulo2=25 ;
		int angulo3=80 ;
		int suma= angulo1 + angulo2 + angulo3;
		//Definimos condicional
		if (suma==180) {
			System.out.println("Los ángulos pueden formar un triángulo ya que la suma de ellos es 180º.");
		} else {
			System.out.println("La suma de los ángulos, cuyo valor es %d, no podría formar un triángulo "
					+ "porque esta no es 180º.", suma);
		}

	}

}
